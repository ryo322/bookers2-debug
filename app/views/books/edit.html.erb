<%= render 'layouts/errors', obj: @book %>
<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <div>
        <p >Title</p>
        <%= f.text_field :title %>
      </div>
      <div>
       <p>Opinion</p>
       <%= f.text_area :body %>
      </div>
      <%= f.submit "Update Book", class: "btn btn-success btn-sm" %>
      <% end %>
       <%= link_to "Show", book_path(@book.id) %>
        |
       <%= link_to "Back", '/books' %>
    </div>
  </div>
</div>
</div>